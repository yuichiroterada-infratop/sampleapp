<h1>Lists#show</h1>

<h2>Title</h2>
<p><%= @list.title %></p>

<h2>Body</h2>
<p><%= @list.body %></p>

<h2>Image</h2>
<p><%= image_tag @list.image, size: "200x200" %></p>

<!--編集・削除画面へのリンク-->
<p><%= link_to "Edit", edit_list_path(@list.id) %></p>
<p><%= link_to "Delete", list_path(@list.id), method: :delete, "data-confirm"=>"Are you sure?" %></p>

