<h1>Lists#new</h1>

<% if @list.errors.any? %>
  <%= @list.errors.count %>errors occured!
  <ul>
    <% @list.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @list, url: "/lists", method: :post do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <h4>Image</h4>
  <%= f.file_field :image, accept: "image_*" %>
  
  </br><%= f.submit %>
<% end %>

